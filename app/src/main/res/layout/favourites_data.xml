<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/favouritesView"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <TextView
        android:id="@+id/favouriteText"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:text="Hi"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/favouritesView"
        app:layout_constraintEnd_toEndOf="@+id/favouritesView"
        app:layout_constraintStart_toStartOf="@+id/favouritesView"
        app:layout_constraintTop_toTopOf="@+id/favouritesView"
        app:layout_constraintVertical_bias="0.65" />

    <ImageView
        android:id="@+id/favouriteIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_fill_favourite"
        android:backgroundTint="#9849E1"
        app:layout_constraintBottom_toBottomOf="@+id/favouritesView"
        app:layout_constraintEnd_toEndOf="@+id/favouritesView"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/favouritesView"
        app:layout_constraintTop_toTopOf="@+id/favouritesView"
        app:layout_constraintVertical_bias="0.09"
        tools:ignore="ImageContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>